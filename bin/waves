#!/usr/bin/ruby
# -*- coding: utf-8 -*-

require 'rubygems'

root_path = if Gem.win_platform?
	File.join('..', 'lib')
else
	File.join(File.dirname(__FILE__), "..", "lib")
end

$:.unshift(root_path)
require 'waves'

if ARGV[0] == "samples"
  Waves.samples.each { |s| Waves.echo(s, :cyan) }
else
  sample = ARGV[0] || "1"
  Waves.start(sample)
end

